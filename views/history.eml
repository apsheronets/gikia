% open Lwt
% open Utils
% open Vcs
% let f a buf =
  <% Header_table.f a buf >|= fun () -> %>
  <h1><%= a#title %></h1>
  <table class="history" style="width: 100%">
    <tr>
      <th>author</th>
      <th>date</th>
      <th>name</th>
    </tr>
    <% a#changes >> List.iter begin fun p -> %>
    <tr>
      <td><%= p.author %></td>
      <td>
        <%= match p.date with
        | Rfc s -> s
        | Calendar d -> rfc3339_of_calendar d %>
      </td>
      <td>
        <a href="<%= url_to_change a#file#segpath p.Vcs.hash %>"><%= p.Vcs.title %></a>
        <% p.comment >> List.iter begin fun s -> %>
          <br /><%= s %>
        <% end; %>
      </td>
    </tr>
    <% end; %>
  </table>
